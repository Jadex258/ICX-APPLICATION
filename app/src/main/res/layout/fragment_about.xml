<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/head"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="About Us"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="12dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/dark_blue"
        android:text="@string/the_best_site_for_finding_service_nproviders_and_seekers_in_ormoc_city"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="355dp"
        android:layout_marginEnd="25dp"
        android:gravity="center"
        android:justificationMode="inter_word"
        android:text="Our website offers a comprehensive platform for jobseekers and providers to search, apply and post services and connect with potential employers and Employee. With a user-friendly interface, advanced search filters and real-time job matching, our website streamlines the job search process, making it easier and more efficient for you to find your ideal job."
        android:textSize="12sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="465dp"
        android:src="@drawable/city" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginTop="485dp"
        android:drawableStart="@drawable/ic_baseline_check_24"
        android:fontFamily="sans-serif"
        android:text="@string/reliable"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginTop="525dp"
        android:drawableStart="@drawable/ic_baseline_check_24"
        android:fontFamily="sans-serif"
        android:text="Secured"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="290dp"
        android:layout_marginTop="520dp"
        android:drawableStart="@drawable/ic_baseline_check_24"
        android:fontFamily="sans-serif"
        android:text="Clean Environment"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="290dp"
        android:layout_marginTop="485dp"
        android:drawableStart="@drawable/ic_baseline_check_24"
        android:fontFamily="sans-serif"
        android:text="24/7 Support"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/des"
        android:text="more--->"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/dark_blue"
        android:textAllCaps="true"
        android:layout_marginTop="120dp"
        android:layout_marginStart="340dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="230dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tope"
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="355dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/tope" />

            <ImageView
                android:id="@+id/jade"
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="355dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/jade" />

            <ImageView
                android:id="@+id/pacs"
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="355dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/pacs" />

            <ImageView
                android:id="@+id/ubay"
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="355dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ubay" />


            <ImageView
                android:id="@+id/jaden"
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="355dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/jaden" />

            <ImageView
                android:id="@+id/gerale"
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="355dp"
                android:layout_marginEnd="25dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/gerale" />
        </LinearLayout>

    </HorizontalScrollView>



</RelativeLayout>