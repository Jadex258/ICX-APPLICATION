<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/header"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/myGetStarted"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_below="@id/view"
        android:layout_marginStart="210dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif"
        android:paddingTop="2dp"
        android:text="Get Started"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/TextInputLayoutAppearance" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/body"
        android:layout_below="@id/slider"
        android:layout_marginTop="-75dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/view"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="430dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:text="@string/apply_and_post_services_now"
        android:textAllCaps="true"
        android:textColor="@color/dark_blue"
        android:textSize="20sp"
        android:textStyle="bold" />



    <ViewFlipper
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:autoStart="true"
        android:flipInterval="2000"
        android:inAnimation="@anim/slide_in_left"
        android:outAnimation="@anim/slide_in_right"
        android:layout_height="230dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_image">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/first"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/second"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/third" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fourth" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fifth" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/sixth" />
    </ViewFlipper>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="230dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/housekeeping"
                android:layout_width="190dp"
                android:layout_height="120dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="370dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/house" />

            <ImageView
                android:id="@+id/electrical"
                android:layout_width="190dp"
                android:layout_height="120dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="370dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/electric" />

            <ImageView
                android:id="@+id/electronics"
                android:layout_width="190dp"
                android:layout_height="120dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="370dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/electronics" />

            <ImageView
                android:id="@+id/mechanic"
                android:layout_width="190dp"
                android:layout_height="120dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="370dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/mechan" />


            <ImageView
                android:id="@+id/wifi_cctv"
                android:layout_width="190dp"
                android:layout_height="120dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="370dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/wifi_cctv" />

            <ImageView
                android:id="@+id/construction"
                android:layout_width="190dp"
                android:layout_height="120dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="370dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/contruct" />
        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/getstarted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="570dp"
        android:layout_marginStart="15dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="left"
        android:text="Service Categories -->"
        android:textAllCaps="true"
        android:textColor="@color/dark_blue"
        android:textSize="20sp"
        android:textStyle="bold" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:layout_below="@id/getstarted"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-200dp"
        android:src="@drawable/pig" />




</RelativeLayout>
