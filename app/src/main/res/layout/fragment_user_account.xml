<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray">

    <!-- Profile section -->
    <LinearLayout
        android:id="@+id/profile_section"
        android:layout_width="391dp"
        android:layout_height="117dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/dashbg"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Profile picture -->
        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user" />

        <!-- Profile details -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="useremail@example.com"
                android:textColor="@color/light_gray"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>



    <!-- Privacy section -->

    <TextView
        android:id="@+id/privacy_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_section"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:padding="16dp"
        android:paddingStart="40dp"
        android:text="Account Settings"
        android:drawableStart="@drawable/ic_baseline_settings_24"
        android:drawablePadding="10dp"
        android:textColor="@color/dark_blue"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/account_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/privacy_section"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/circularbordersolid"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp">

        <!-- Account information -->
        <TextView
            android:id="@+id/account_info_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="@color/light_gray"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:drawablePadding="10dp"
            android:padding="12dp"
            android:text="Account Information"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Change Password -->
        <TextView
            android:id="@+id/forgot_password_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@color/light_gray"
            android:drawableStart="@drawable/ic_baseline_lock_open_24"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:drawablePadding="10dp"
            android:padding="12dp"
            android:text="Change Password"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- App Version -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@color/light_gray"
            android:drawableStart="@drawable/ic_baseline_apps_24"
            android:drawablePadding="10dp"
            android:padding="12dp"
            android:text="App Version 1.0.0"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Privacy Policy -->
        <TextView
            android:id="@+id/privacy_policy_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@color/light_gray"
            android:drawableStart="@drawable/ic_baseline_privacy_tip_24"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:drawablePadding="10dp"
            android:padding="12dp"
            android:text="Privacy Policy"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Contact Us -->
        <TextView
            android:id="@+id/contact_us_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@color/light_gray"
            android:drawableStart="@drawable/ic_baseline_local_phone"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:drawablePadding="10dp"
            android:padding="12dp"
            android:text="Contact Us"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/terms_conditions_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@color/light_gray"
            android:drawableStart="@drawable/ic_baseline_description_24"
            android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:drawablePadding="10dp"
            android:padding="12dp"
            android:text="Terms and Conditions"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Logout Button -->
    <Button
        android:id="@+id/my_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/account_section"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/circularbordersolid"
        android:padding="12dp"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp" />




</RelativeLayout>
